---
import { base } from 'astro:config';
const { selectedItem } = Astro.props;
const b = base ?? '';
---

<aside
  data-animation="default"
  data-collapse="medium"
  data-duration="400"
  data-easing="ease"
  data-easing2="ease"
  role="banner"
  class="sidebar w-nav"
>
  <div class="nav-content">
    <a href={`${b}/`} class="w-nav-brand" aria-label="home">
      <div class="niv-data">
        <img
          src={`${b}/assets/Atendido.png`}
          loading="eager"
          alt="Lance Atendido"
          class="niv-image"
          style="border-radius: 0; object-fit: contain; background: transparent;"
        />
        <div>
          <div class="label-white">Lance Atendido</div>
          <div class="label-gray">IT Student | Backend Developer</div>
        </div>
      </div>
    </a>

    <nav role="navigation" class="w-nav-menu">
      <a
        href={`${b}/`}
        class={`nav-link-container w-inline-block ${selectedItem === 'home' ? 'w--current' : ''}`}
      >
        <img src={`${b}/assets/home.svg`} loading="eager" alt="" class="nav-link-image" />
        <div>About Me</div>
      </a>

      <a
        href={`${b}/skills`}
        class={`nav-link-container w-inline-block ${selectedItem === 'skills' ? 'w--current' : ''}`}
        aria-current={selectedItem === 'skills' ? 'page' : undefined}
      >
        <img src={`${b}/assets/skills-icon.png`} loading="eager" alt="" class="nav-link-image" />
        <div>Skills</div>
      </a>

      <a
        href={`${b}/achievements`}
        class={`nav-link-container w-inline-block ${selectedItem === 'achievements' ? 'w--current' : ''}`}
      >
        <img src={`${b}/assets/achievements-icon.png`} loading="eager" alt="" class="nav-link-image" />
        <div>Achievements</div>
      </a>

      <a
        href={`${b}/personal-projects`}
        class={`nav-link-container w-inline-block ${selectedItem === 'personal-projects' ? 'w--current' : ''}`}
      >
        <img src={`${b}/assets/favorite.svg`} loading="eager" alt="" class="nav-link-image" />
        <div>Personal Projects</div>
      </a>
    </nav>

    <div
      class="navbar-icon-button w-nav-button"
      style="-webkit-user-select: text;"
      aria-label="menu"
      role="button"
      tabindex="0"
    >
      <img src={`${b}/assets/menu.svg`} loading="eager" alt="" class="navbar-icon" />
    </div>
  </div>

  <script>
    import { setupNav } from '../scripts/nav.js';

    let cleanup;
    document.addEventListener('astro:page-load', () => {
      if (cleanup) cleanup();
      cleanup = setupNav();
    });

    document.addEventListener('astro:before-swap', () => {
      if (cleanup) cleanup();
    });
  </script>
</aside>